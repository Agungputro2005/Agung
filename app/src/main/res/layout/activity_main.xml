<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/agungps" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/suwarno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/kepalasekolah" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Kepala Sekolah"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/suwarno"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/masjid" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Masjid"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/suwarno"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/ekstrakulikuler" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Ekstrakulikuler"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/suwarno"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:adjustViewBounds="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:src="@drawable/exit" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Exit"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ll1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/suwarno"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/guru" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Guru"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/suwarno"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
>

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="29dp"
                    android:src="@drawable/aulasekolah" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Aula Sekolah"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/suwarno"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingBottom="29dp"
                    android:src="@drawable/perpustakaan" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Perpustakaan"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>